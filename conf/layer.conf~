# We have a conf and classes directory, add to BBPATH
BBPATH .= ":${LAYERDIR}"

# We have recipes-* directories, add to BBFILES
BBFILES += "${LAYERDIR}/recipes-*/*/*.bb \
            ${LAYERDIR}/recipes-*/*/*.bbappend"

BBFILE_COLLECTIONS += "meta-bonehub"
BBFILE_PATTERN_meta-bonehub = "^${LAYERDIR}/"
BBFILE_PRIORITY_meta-bonehub = "6"

LAYERDEPENDS_meta-bonehub = "core"
LAYERSERIES_COMPAT_meta-bonehub = "styhead"

DISTRO_DIR_bonehub = "${LAYERDIR}/conf/distro"
DISTRO = "bonehubos"
